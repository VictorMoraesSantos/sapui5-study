<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    controllerName="Api.controller.Home"
    displayBlock="true">
    <Page title="{i18n>appTitle}">
        <content>
            <VBox alignItems="Center" justifyContent="Center" class="sapUiMediumMargin">
                <Text text="{i18n>appDescription}" class="sapUiLargeMarginBottom" />
                <Button 
                    text="{i18n>appButton}" 
                    type="Emphasized"
                    press="onNavigateToProducts" />
            </VBox>
        </content>
    </Page>
</mvc:View>