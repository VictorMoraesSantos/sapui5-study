<mvc:View
    controllerName="Api.controller.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
>
    <Page
        title="{i18n>loginTitle}"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <content>
            <VBox
                alignItems="Center"
                justifyContent="Center"
                class="sapUiSmallMargin"
            >
                <VBox
                    width="400px"
                    class="sapUiSmallMargin"
                >
                    <Title
                        text="{i18n>loginTitle}"
                        class="sapUiSmallMargin"
                    />
                    <Label
                        text="{i18n>username}"
                        labelFor="usernameInput"
                    />
                    <Input
                        id="usernameInput"
                        placeholder="{i18n>usernamePlaceholder}"
                        class="sapUiSmallMarginBottom"
                        value="{login>/username}"
                    />
                    <Label
                        text="{i18n>password}"
                        labelFor="passwordInput"
                    />
                    <Input
                        id="passwordInput"
                        type="Password"
                        placeholder="{i18n>passwordPlaceholder}"
                        class="sapUiSmallMarginBottom"
                        value="{login>/password}"
                        submit="onLogin"
                    />
                    <HBox
                        justifyContent="End"
                        width="100%"
                    >
                        <Button
                            text="{i18n>registerPrompt}"
                            type="Transparent"
                            press="onNavigateToRegister"
                        />
                    </HBox>
                    <Button
                        text="{i18n>loginButton}"
                        press="onLogin"
                        class="sapUiSmallMarginTop"
                        width="100%"
                        type="Emphasized"
                    />
                    <Text
                        text="{login>/errorMessage}"
                        class="sapUiSmallMarginTop"
                        visible="{= ${login>/errorMessage} !== '' }"
                        textAlign="Center"
                    />
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
