<mvc:View
    controllerName="Api.controller.Register"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
>
    <Page
        title="{i18n>registerTitle}"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <content>
            <VBox
                alignItems="Center"
                justifyContent="Center"
                class="sapUiSmallMargin"
            >
                <VBox
                    width="400px"
                    class="sapUiSmallMargin"
                >
                    <Title
                        text="{i18n>registerTitle}"
                        class="sapUiSmallMargin"
                    />

                    <Label
                        text="{i18n>registerUsername}"
                        labelFor="usernameInputRegister"
                    />
                    <Input
                        id="usernameInputRegister"
                        placeholder="{i18n>usernamePlaceholder}"
                        class="sapUiSmallMarginBottom"
                        value="{register>/username}"
                    />

                    <Label
                        text="{i18n>registerEmail}"
                        labelFor="emailInputRegister"
                    />
                    <Input
                        id="emailInputRegister"
                        placeholder="{i18n>emailPlaceholder}"
                        class="sapUiSmallMarginBottom"
                        value="{register>/email}"
                    />

                    <Label
                        text="Password"
                        labelFor="passwordInputRegister"
                    />
                    <Input
                        id="passwordInputRegister"
                        type="Password"
                        placeholder="Enter your password"
                        class="sapUiSmallMarginBottom"
                        value="{register>/password}"
                        submit="onRegister"
                    />

                    <Button
                        text="{i18n>registerButton}"
                        press="onRegister"
                        class="sapUiSmallMarginTop"
                        width="100%"
                        type="Emphasized"
                    />

                    <Text
                        text="{register>/errorMessage}"
                        class="sapUiSmallMarginTop"
                        visible="{= ${register>/errorMessage} !== '' }"
                        textAlign="Center"
                    />
                </VBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
