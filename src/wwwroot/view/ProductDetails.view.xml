<mvc:View
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    controllerName="Api.controller.ProductDetails"
    displayBlock="true"
>
    <Page
        title="{i18n>productDetailsTitle}"
        showNavButton="true"
        navButtonPress="onNavBack"
    >
        <headerContent>
            <Button
                id="editButton"
                icon="sap-icon://edit"
                text="{i18n>edit}"
                press="onEdit"
            />
            <Button
                id="deleteButton"
                icon="sap-icon://delete"
                text="{i18n>delete}"
                press="onDelete"
            />
        </headerContent>
        <content>
            <VBox class="sapUiMediumMargin">
                <f:SimpleForm
                    id="productForm"
                    editable="false"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="4"
                    labelSpanS="12"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                >
                    <f:content>
                        <Label text="{i18n>id}" />
                        <Text text="{product>/id}" />

                        <Label text="{i18n>title}" />
                        <Text text="{product>/title}" />

                        <Label text="{i18n>description}" />
                        <Text text="{product>/description}" />

                        <Label text="{i18n>price}" />
                        <ObjectNumber
                            number="{product>/price}"
                            unit="R$"
                            state="Success"
                        />

                        <Label text="{i18n>creationDate}" />
                        <Text
                            text="{
                            path: 'product>/createdAt',
                            formatter: '.formatter.formatDate'
                        }"
                        />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
    </Page>
</mvc:View>
